{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Words That I Know API",
        "description": "API used for Words That I Know website",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/word": {
            "get": {
                "tags": [
                    "Word"
                ],
                "summary": "Get all words",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "500": {
                        "description": "Unable to retrieve words"
                    }
                }
            },
            "post": {
                "tags": [
                    "Word"
                ],
                "summary": "Create new word",
                "description": "Create new word",
                "parameters": [
                    {
                        "name": "word",
                        "in": "body",
                        "description": "Word that we want to create",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "New word is created",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "422": {
                        "description": "Word already exists"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Registration error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Word"
                ],
                "summary": "Delete word",
                "description": "Delete word",
                "parameters": [
                    {
                        "name": "word",
                        "in": "body",
                        "description": "Word that you want to delete",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Word deleted",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Delete error"
                    }
                }
            }
        },
        "/word/{wordName}/language/{languageId}": {
            "get": {
                "tags": [
                    "Word"
                ],
                "summary": "Get word by word and language",
                "parameters": [
                    {
                        "name": "wordName",
                        "in": "path",
                        "description": "Word that we want to find",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    {
                        "name": "languageId",
                        "in": "path",
                        "description": "Language related to the word",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "500": {
                        "description": "Unable to retrieve word"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Word"
                ],
                "summary": "Delete word by word and language",
                "parameters": [
                    {
                        "name": "wordName",
                        "in": "path",
                        "description": "Word that we want to delete",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    {
                        "name": "languageId",
                        "in": "path",
                        "description": "Language related to the word",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/Word"
                        }
                    },
                    "500": {
                        "description": "Unable to retrieve word"
                    }
                }
            }
        },
        "/language": {
            "get": {
                "tags": [
                    "Language"
                ],
                "summary": "Get all languages",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Language"
                        }
                    },
                    "500": {
                        "description": "Unable to retrieve words"
                    }
                }
            }
        }
    },
    "definitions": {
        "Word": {
            "required": [
                "wordName",
                "languageId"
            ],
            "properties": {
                "wordName": {
                    "type": "string",
                    "example": "test"
                },
                "languageId": {
                    "type": "string",
                    "enum": [
                        "en",
                        "pt",
                        "fr"
                    ]
                }
            }
        },
        "Language": {
            "required": [
                "id",
                "language"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "example": "en"
                },
                "language": {
                    "type": "string",
                    "example": "English"
                }
            }
        }
    }
}